<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainPage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingBottom="1dp"
            android:orientation="vertical"
            android:background="@drawable/background_linebound">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/menuImg_main"
                    android:layout_width="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_dehaze_24"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Tổng cộng"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="-10.412.000 đ"
                        android:textSize="25sp"
                        android:textColor="@color/loss"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_format_list_bulleted_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/expense_main"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:text="CHI PHÍ"
                        android:textSize="20sp"
                        android:textColor="@color/type_check"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/income_main"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:text="THU NHẬP"
                        android:textSize="20sp"
                        android:textColor="@color/type_check"
                        android:gravity="center"/>
                </LinearLayout>
                <View
                    android:id="@+id/menu_bar_main"
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:orientation="vertical"
            android:background="@drawable/background2"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-45dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/day_pick_wrap"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Ngày"
                    android:textSize="18sp"
                    android:textColor="@color/date_check"/>
                <TextView
                    android:id="@+id/week"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Tuần"
                    android:textSize="18sp"
                    android:textColor="@color/date_uncheck"/>
                <TextView
                    android:id="@+id/month"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Tháng"
                    android:textSize="18sp"
                    android:textColor="@color/date_uncheck"/>
                <TextView
                    android:id="@+id/year"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Năm"
                    android:textSize="18sp"
                    android:textColor="@color/date_uncheck"/>
                <TextView
                    android:id="@+id/other"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Khác"
                    android:textSize="18sp"
                    android:textColor="@color/date_uncheck"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:gravity="center">
                <View
                    android:id="@+id/date_picker_bar_main"
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/dateRange"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="16/04/2023 - 16/04/2023"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/DataChart"
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.518" />

                <ImageView
                    android:id="@+id/add_button_main"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/baseline_add_24"
                    android:layout_marginStart="296dp"
                    android:layout_marginTop="188dp"
                    android:background="@drawable/add_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >
                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <SearchView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/background"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/history_payment">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:text="Mua sắm"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center|left"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:text="5.000.000 đ"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center|right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/history_payment">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:text="Mua sắm nhưng ..."
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center|left"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:text="17.000 đ"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center|right" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_menu_main"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"/>
</androidx.drawerlayout.widget.DrawerLayout>