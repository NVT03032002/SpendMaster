<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/background_linebound">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/menu_main"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/menu"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/total"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/current_money"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="25sp"
                        android:textColor="@color/loss"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/baseline_document_scanner_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/expense_main"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/expenses"
                    android:textSize="20sp"
                    android:textColor="@color/type_check"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/income_main"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/incomes"
                    android:textSize="20sp"
                    android:textColor="@color/type_check"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:id="@+id/menu_bar_main"
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:orientation="vertical"
                    android:background="@drawable/background2"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:id="@+id/day_pick_wrap"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/day"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Ngày"
                            android:textSize="18sp"
                            android:textColor="@color/date_check"/>
                        <TextView
                            android:id="@+id/week"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Tuần"
                            android:textSize="18sp"
                            android:textColor="@color/date_uncheck"/>
                        <TextView
                            android:id="@+id/month"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Tháng"
                            android:textSize="18sp"
                            android:textColor="@color/date_uncheck"/>
                        <TextView
                            android:id="@+id/year"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Năm"
                            android:textSize="18sp"
                            android:textColor="@color/date_uncheck"/>
                        <TextView
                            android:id="@+id/other"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Khác"
                            android:textSize="18sp"
                            android:textColor="@color/date_uncheck"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/date_picker_bar_main"
                            android:layout_width="50dp"
                            android:layout_height="3dp"
                            android:background="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/left_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/arrow_left"
                            android:backgroundTint="@color/black" />
                        <TextView
                            android:id="@+id/dateRange"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/right_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/arrow_right"
                            android:backgroundTint="@color/black"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/DataChart"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.518" />

                        <ImageView
                            android:id="@+id/add_button_main"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/icon_circle"
                            android:padding="10dp"
                            android:src="@drawable/add"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transaction_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_menu_main"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"/>
</androidx.drawerlayout.widget.DrawerLayout>